<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/backimg3"
    >

    <TextView
        android:id="@+id/conthead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Want to Contact us ?"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:textColor="#444"
        android:layout_marginTop="10dp"/>

    <View
        android:id="@+id/contview"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#bbb"
        android:layout_below="@+id/conthead"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/contdesc"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:text="Email or Call us for any kind of support / feedback"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:textColor="#444"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/contview"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:id="@+id/mailicon"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_below="@+id/contdesc"
        android:layout_toStartOf="@+id/mailid"
        android:src="@drawable/mailicon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/mailid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contdesc"
        android:text="healthguide@gmail.com"
        android:layout_centerHorizontal="true"
        android:textColor="#444"
        android:textSize="17sp"
        android:textAlignment="center"
        android:layout_marginTop="15dp"/>

    <ImageView
        android:id="@+id/phoneicon"
        android:layout_width="75dp"
        android:layout_height="30dp"
        android:layout_below="@+id/mailicon"
        android:layout_toStartOf="@+id/phoneno"
        android:src="@drawable/phone"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/phoneno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mailid"
        android:text="+91-XXXXX-XXXXX"
        android:layout_centerHorizontal="true"
        android:textColor="#444"
        android:textSize="17sp"
        android:textAlignment="center"
        android:layout_marginTop="20dp"/>

    <View
        android:id="@+id/appview"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#bbb"
        android:layout_below="@+id/phoneno"
        android:layout_marginTop="40dp"
        />

    <TextView
        android:id="@+id/likeapp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Like our application ?\nSay it at Play Store"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:textColor="#444"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/appview"
        android:layout_marginTop="10dp"/>

    <View
        android:id="@+id/appview1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#bbb"
        android:layout_below="@+id/likeapp"
        android:layout_marginTop="10dp"
        />

    <ImageView
        android:id="@+id/playicon"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@id/appview1"
        android:layout_centerHorizontal="true"
        android:src="@drawable/gplay"
        android:background="@null"/>

    <View
        android:id="@+id/appview2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#bbb"
        android:layout_below="@+id/playicon"
        />

</RelativeLayout>
</ScrollView>